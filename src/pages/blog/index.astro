---
import SeoLayout from '../../layouts/SeoLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { blogPosts } from '../../data/blogPosts';

const posts = [...blogPosts].sort(
  (a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()
);
---

<SeoLayout
  title="Blog | EXYU IPTV - Vodici i Novosti"
  description="Procitajte najnovije vodice za instalaciju IPTV-a i savjete za stabilniji streaming na svim uredajima."
  canonicalURL="https://exyukanali.tv/blog/"
>
  <Navbar />

  <main class="pt-24 pb-20 bg-stone-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">Blog</span>
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Procitajte najnovije vodice za instalaciju i savjete za stabilniji IPTV streaming.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
            <div class="h-48 bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
              <span class="text-6xl">ðŸ“º</span>
            </div>
            <div class="p-6">
              <div class="flex items-center gap-2 mb-3">
                <span class="px-3 py-1 bg-blue-100 text-blue-600 text-xs font-semibold rounded-full">
                  {post.category}
                </span>
                <time datetime={post.date} class="text-gray-500 text-sm">
                  {new Date(post.date).toLocaleDateString('de-DE')}
                </time>
              </div>
              <h2 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2">
                <a href={`/blog/${post.slug}/`} class="hover:text-blue-600 transition-colors">
                  {post.title}
                </a>
              </h2>
              <p class="text-gray-600 text-sm mb-4 line-clamp-3">{post.excerpt}</p>
              <a
                href={`/blog/${post.slug}/`}
                class="inline-flex items-center gap-2 text-blue-600 font-semibold hover:gap-3 transition-all"
              >
                Procitaj vise ->
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </main>

  <Footer />
</SeoLayout>
