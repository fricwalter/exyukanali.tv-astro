---
import SchemaOrg from '../components/SchemaOrg.astro';
import { normalizeInternalURL } from '../utils/links';

interface Props {
  title?: string;
  description?: string;
  canonicalURL?: string | URL;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  author?: string;
}

const {
  title = 'EXYU IPTV Kanali | IPTV za Dijasporu',
  description = 'EXYU IPTV za dijasporu sa stabilnim streamingom, velikom listom kanala i podrskom na svim uredajima.',
  canonicalURL,
  image = 'https://exyukanali.tv/og-image.jpg',
  type = 'website',
  publishedTime,
  author = 'EXYU Kanali TV'
} = Astro.props;

const siteURL = 'https://exyukanali.tv';
const canonical = canonicalURL
  ? normalizeInternalURL(new URL(canonicalURL.toString(), siteURL).toString())
  : normalizeInternalURL(new URL(Astro.url.pathname, siteURL).toString());

const rawDescription = description.trim();
const safeDescription =
  rawDescription.length > 160 ? `${rawDescription.slice(0, 157).trimEnd()}...` : rawDescription;

if (import.meta.env.DEV) {
  if (safeDescription.length < 70) {
    console.warn(`Meta description too short (${safeDescription.length}): ${canonical}`);
  }
  if (rawDescription.length > 160) {
    console.warn(`Meta description too long (${rawDescription.length}): ${canonical}`);
  }
}
---

<!doctype html>
<html lang="sr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={safeDescription} />
    <meta name="author" content={author} />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="language" content="Serbian" />
    <link rel="canonical" href={canonical} />

    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={safeDescription} />
    <meta property="og:image" content={image} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="sr_RS" />
    <meta property="og:site_name" content="EXYU Kanali TV" />

    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {author && <meta property="article:author" content={author} />}

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonical} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={safeDescription} />
    <meta name="twitter:image" content={image} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.ico" />
    <meta name="msapplication-TileColor" content="#2563eb" />
    <meta name="theme-color" content="#2563eb" />

    <SchemaOrg
      type="Organization"
      data={{
        title: 'EXYU Kanali TV',
        description: 'Najbolja internet televizija za dijasporu.',
        url: siteURL,
        image
      }}
    />
    <SchemaOrg type="WebPage" data={{ title, description: safeDescription, url: canonical, image }} />

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-F3H8C2FR00"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-F3H8C2FR00');
    </script>
  </head>
  <body class="font-sans antialiased">
    <slot />
    <script is:inline>
      const hydrateEmailLinks = () => {
        document.querySelectorAll('a[data-email]').forEach((link) => {
          const email = link.getAttribute('data-email');
          if (!email) return;

          const subject = link.getAttribute('data-subject');
          const body = link.getAttribute('data-body');
          const params = new URLSearchParams();
          if (subject) params.set('subject', subject);
          if (body) params.set('body', body);

          const query = params.toString();
          link.setAttribute('href', `mailto:${email}${query ? `?${query}` : ''}`);

          if (!link.hasAttribute('data-preserve-text')) {
            link.textContent = email;
          }
        });

        document.querySelectorAll('form[data-email-action]').forEach((form) => {
          const email = form.getAttribute('data-email-action');
          if (!email) return;
          form.setAttribute('action', `mailto:${email}`);
        });

        document.querySelectorAll('[data-email-text]').forEach((node) => {
          const email = node.getAttribute('data-email-text');
          if (!email) return;
          node.textContent = email;
        });
      };

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', hydrateEmailLinks);
      } else {
        hydrateEmailLinks();
      }
    </script>
  </body>
</html>

<style is:global>
  @import "tailwindcss";

  :root {
    --color-primary: #2563eb;
    --color-primary-dark: #1d4ed8;
    --color-accent: #f59e0b;
    --color-accent-dark: #d97706;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
  }
</style>
